#!/bin/sh

APP=vlc-3.0.16

# CREATE THE FOLDER
mkdir /opt/$APP
cd /opt/$APP

# ADD THE REMOVER
echo '#!/bin/sh' >> /opt/$APP/remove
echo "rm -R -f /usr/share/applications/AM-$APP.desktop /opt/$APP /usr/local/bin/$APP" >> /opt/$APP/remove
chmod a+x /opt/$APP/remove

# DOWNLOAD THE APPIMAGE
mkdir tmp
cd ./tmp

echo ' 
 THIS VERSION OF VLC APPIMAGE IS PROVIDED...

 1) WITH PLUGINS (ABOUT 280 MB);
 2) WITHOUT PLUGINS (ABOUT 130 MB).
'
read -r -p " WHICH VERSION YOU CHOOSE BETWEEN 1 AND 2? " response
case "$response" in
    1) wget https://github.com/ivan-hc/VLC_media_player-x86_64.AppImage/releases/download/3.0.16/VLC_media_player-.with-plugins.-GLIBC.2.27-x86_64.AppImage;;
    2) wget https://github.com/ivan-hc/VLC_media_player-x86_64.AppImage/releases/download/3.0.16/VLC_media_player-GLIBC.2.27-x86_64.AppImage;;
    *) echo ""; echo " NO VALID ARGUMENT WAS CHOSEN: INSTALLATION ABORTED! "; rm -R -f /opt/$APP; echo ""; exit;;
esac

version=$(ls /opt/$APP/tmp)
echo "$version" >> /opt/$APP/version

cd ..
mv ./tmp/*mage ./$APP
chmod a+x /opt/$APP/$APP
rmdir ./tmp

# LINK
ln -s /opt/$APP/$APP /usr/local/bin/$APP

