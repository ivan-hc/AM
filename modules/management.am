	elif [ -f "$APPSPATH"/"$arg"/remove ]; then
		[ -w "$APPSPATH"/"$arg" ] && $SUDOCMD echo -e "\r" >/dev/null
		RMPATH="1"
	else
		RMPATH=""
	fi
	echo "$DIVIDING_LINE"
}

