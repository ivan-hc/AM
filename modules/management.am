	[ "$AMCLI" = am ] && _detect_appman_apps
	_detect_path_to_remove
	[ -z "$RMPATH" ] && echo -e $" \"${RED}$arg\033[0m\" is not a valid \"APPNAME\", see \"$AMCLI -f\" for more." && return 1
