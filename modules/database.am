			printf "\n Search results for \"%s\":\n\n"  "$entries" | tr '[:lower:]' '[:upper:]'
			pattern="$(echo "$entries" | sed 's/ /(?=.*/g; s/$/)/g; s/(/)(/g; s/^/(?=.*/g;')"
			grep -Pi "$pattern" "$AMDATADIR/$ARCH-apps" | _pretty_list_compat
		fi
		printf '\n'
		;;
