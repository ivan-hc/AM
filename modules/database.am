################################################################################

case "$1" in
	'-a'|'about')
		[ -z "$2" ] && echo " USAGE: $AMCLI $1 [ARGUMENT]" && exit 1
		_online_check
		_sync_third_party_lists
		_determine_args
		echo "$DIVIDING_LINE"
