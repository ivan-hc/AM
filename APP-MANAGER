								10) 
									sed -i s/YOURCATEGORY/Settings/g ./am-scripts/$arch/$arg;; 
								11) 
									sed -i s/YOURCATEGORY/System/g ./am-scripts/$arch/$arg;;
								12|*) 
									sed -i s/YOURCATEGORY/Utility/g ./am-scripts/$arch/$arg;;
								esac

