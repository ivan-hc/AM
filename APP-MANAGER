								read -p ' Do you wish to include system libraries (Y,n)?' yn
		
								case $yn in
								'N'|'n') 
									sed -i 's/##export LD_LIBRARY_PATH/export LD_LIBRARY_PATH/g' ./am-scripts/$arch/$arg;;
								'Y'|'y'|*) 
									sed -i 's/#export LD_LIBRARY_PATH/export LD_LIBRARY_PATH/g' ./am-scripts/$arch/$arg;;
								esac

